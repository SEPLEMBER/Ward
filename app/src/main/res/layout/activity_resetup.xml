<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/rootLinear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resetup — массовое удаление приложений"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вставьте package name'ы по одному в строке, например:\ncom.app1\ncom.app2\ncom.example.editor"
            android:textSize="14sp"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="com.example.tempapp1\ncom.example.tempapp2\n..."
            android:inputType="textMultiLine"
            android:minLines="6"
            android:gravity="top|start"
            android:background="@android:drawable/edit_text"
            android:padding="8dp"
            android:scrollbars="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/resetupButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="resetup"
                android:contentDescription="Запустить пакетное удаление"/>

            <Button
                android:id="@+id/stopButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Остановить"
                android:layout_marginStart="8dp"
                android:visibility="gone"/>
                <!-- Кнопка остановки скрыта по умолчанию; можно показать при старте очереди -->
        </LinearLayout>

        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Готово: 0 пакетов"
            android:paddingTop="12dp"/>

    </LinearLayout>
</ScrollView>
